@model Stilosoft.ViewModels.Citas.CitaViewModel

@{
    ViewData["Title"] = "Cita";
}

<div class="container-fluid align-content-center">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Crear" enctype="multipart/form-data">

                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <label asp-for="ClienteId" class="control-label"></label>
                    <input asp-for="ClienteId" class="form-control" />
                    <span asp-validation-for="ClienteId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ServicioId1" class="control-label"></label>
                    <input asp-for="ServicioId1" class="form-control" />
                    <span asp-validation-for="ServicioId1" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ServicioId2" class="control-label"></label>
                    <input asp-for="ServicioId2" class="form-control" />
                    <span asp-validation-for="ServicioId2" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ServicioId3" class="control-label"></label>
                    <input asp-for="ServicioId3" class="form-control" />
                    <span asp-validation-for="ServicioId3" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ServicioId4" class="control-label"></label>
                    <input asp-for="ServicioId4" class="form-control" />
                    <span asp-validation-for="ServicioId4" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ServicioId5" class="control-label"></label>
                    <input asp-for="ServicioId5" class="form-control" />
                    <span asp-validation-for="ServicioId5" class="text-danger"></span>
                </div>  
                <div class="form-group">
                    <label asp-for="FechaHora" class="control-label"></label>
                    <input type="datetime-local" asp-for="FechaHora" class="form-control" />
                    <span asp-validation-for="FechaHora" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <br />
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}