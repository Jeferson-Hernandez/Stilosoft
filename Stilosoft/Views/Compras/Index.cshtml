@model IEnumerable<Stilosoft.Model.Entities.Compra>

@{
    ViewData["Title"] = "Compras";
}
<br />
<div class="container-fluid">
    <div class="row">
        <div class="col-md-1 mr-md-4">
            <a href="#" class="btn btn-secondary">Proveedor</a>
        </div>
        <div class="col-md-1 mr-md-4">
            <a href="#" class="btn btn-primary">Estilistas</a>
        </div>
        <div class="col-md-1 mr-md-4">
            <a asp-action="index" asp-controller="Servicios" class="btn btn-primary">Servicios</a>
        </div>
        <div class="col-md-5">
            <a href="#" class="btn btn-primary">Programación agenda</a>
        </div>
    </div>
</div>
<hr>
<section class="content">
    <p>
        <a asp-action="CrearCompra" class="btn btn-success"> Registrar compra</a>
        
    </p>
    <table class="table" id="tabla">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ProveedorId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaFactura)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NoFactura)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FormaPago)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaInicioPago)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaRegistro)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cuotas)
                </th>
                <th>
                    Factura
                </th>
                <th>
                    Ver detalle compra
                </th>
                <th>
                    Acciones
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Proveedor.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaFactura)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NoFactura)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FormaPago)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaInicioPago)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaRegistro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cuotas)
                </td>
                <td>
                    @if (item.RutaImagen != null)
                    {
                        <img src="@("~/imagenes/" + item.RutaImagen)" asp-append-version="true" class="img-fluid w-25 h-auto"/>
                    }                  
                </td>
                <td>
                    <a asp-action="DetalleIndex" asp-route-id="@item.CompraId" class="btn btn-dark"><i class="far fa-file-alt"></i></a>
                </td>
                <td>
                    <a asp-action="AbonoCompra" asp-route-id="@item.CompraId" class="btn btn-dark"><i class="fas fa-coins"></i></a>
                    <form asp-action="EliminarCompra" asp-route-id="@item.CompraId" onclick="return  DeleteConfirm()" href="/Compras/Index/@item.CompraId" class="d-inline">
                        <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt" onclientclick="return confirm('¿Confirma eliminar compra?');"></i></button>
                    </form>

                </td>


            </tr>
            }
        </tbody>
    </table>

</section>

@section Scripts{

    <script src="~/js/tabla.js"></script>
    <script src="js-global/FancyZoom.js" type="text/javascript"></script>
    <script src="js-global/FancyZoomHTML.js" type="text/javascript"></script>

    @if (TempData["Mensaje"] != null && TempData["Accion"].ToString().Equals("RegistrarCompra"))
    {<text>
            Swal.fire({
            title: "Registrar compra",
            icon: 'success',
            html: "@TempData["Mensaje"]"
            });
    </text>
}

    @if (TempData["Mensaje"] != null && TempData["Accion"].ToString().Equals("EditarCompra"))
    {<text>
            Swal.fire({
            title: "Editar compra",
            icon: 'success',
            html: "@TempData["Mensaje"]"
            });
    </text>
}

    @if (TempData["Mensaje"] != null && TempData["Accion"].ToString().Equals("EliminarCompra"))
    {<text>
            Swal.fire({
            title: "Eliminar compra",
            icon: 'success',
            html: "@TempData["Mensaje"]"
            });
    </text>
}

    @if (TempData["Mensaje"] != null && TempData["Accion"].ToString().Equals("Error"))
    {<text>
            Swal.fire({
            title: "Error",
            icon: 'error',
            html: "@TempData["Mensaje"]"
            });
    </text>
}

    <script type="text/javascript">
        function DeleteConfirm() {
            if (confirm("¿Quieres eliminar la compra?"))
                return true;
            else
                return false;
        }
    </script>
}

