
@{
    ViewData["Title"] = "Solicitud de servicio";
}
<br />
<div class="container-fluid">
    <div class="row">
        <div class="col-md-10">
            <a href="#" class="btn btn-primary btn-lg mr-md-4">Clientes</a>
            <a asp-action="index" asp-controller="Citas" class="btn btn-primary btn-lg mr-md-4">Citas</a>
            <a href="#" class="btn btn-secondary btn-lg mr-md-4">Solicitud de servicio</a>
            <a href="#" class="btn btn-primary btn-lg">Ventas</a>
        </div>
    </div>
</div>
<hr>
<section class="content">
    <div class="row">
        <div class="col-md-6 pl-5"><h2>Gestión de solicitud</h2></div>
        <div class="col-md-4 text-right">
            <a class="btn btn-dark"><i class="fas fa-print"></i></a>
        </div>
    </div>

    <div class="row">
        <div class="col-10 text-right">
            <a onclick="mostrarModalS('@Url.Action("VistaServicio","Vistas","null",Context.Request.Scheme)','Agregar servicio a la solicitud')" class="btn btn-success"> Agregar servicio</a>            
        </div>
    </div>

    <br />
    <div class="container ">
        <table class="table table-bordered" >
            <thead>
                <tr>
                    <th>ServicioId</th>
                    <th>Servicio</th>
                    <th>Precio</th>
                    <th>Total servicio</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>Rayitos</td>
                    <td>10.000</td>
                    <td>10.000</td>
                    <td>
                        <a href="#" class="btn btn-danger"><i class="far fa-trash-alt"></i></a>
                    </td>
                </tr>
                <tr>
                    <td>3</td>
                    <td>Corte</td>
                    <td>10.000</td>
                    <td>20.000</td>
                    <td>
                        <a href="#" class="btn btn-danger"><i class="far fa-trash-alt"></i></a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <br />
    <br />
    <div class="row">
        <div class="col-10 text-right">
            <a onclick="mostrarModalS('@Url.Action("VistaProducto","Vistas","null",Context.Request.Scheme)','Agregar producto a la solicitud')" class="btn btn-success"> Agregar producto</a>
        </div>
    </div>
    <br />
    <div class="container ">
        <table class="table table-bordered" >
            <thead>
                <tr>
                    <th>ProductoId</th>
                    <th>Producto</th>
                    <th>Medida</th>
                    <th>Precio</th>
                    <th>Cantidad</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>Shampoo</td>
                    <td>1000ml</td>
                    <td>10.000</td>
                    <td>2</td>
                    <td>
                        <a href="#" class="btn btn-danger"><i class="far fa-trash-alt"></i></a>
                    </td>
                </tr>
                <tr>
                    <td>2</td>
                    <td>Esmalte</td>
                    <td>100ml</td>
                    <td>20.000</td>
                    <td>3</td>
                    <td>
                        <a href="#" class="btn btn-danger"><i class="far fa-trash-alt"></i></a>
                    </td>
                </tr>
            </tbody>
        </table>
        <p>Total: 30.000</p>
    </div>
    <br />    
    <div class="row">
        <div class="col-6 text-right">
            <a class="btn btn-primary"> Guardar</a>
        </div>
        <div class="col-6">
            <a class="btn btn-primary"> Cancelar</a>
        </div>
    </div>
    <br />
    <br />
</section>



@section Scripts{

    <script src="~/js/tabla.js"></script>
    <script src="~/js/modals.js"></script>
}