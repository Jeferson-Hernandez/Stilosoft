<!-- Team-->
<section class="page-section bg-light" id="productos">
    <h2 class="text-center">Productos</h2><br />
    <div class="container">
        <div class="row">
            <div class="col-3">
                <input id="inputBuscar" type="text" placeholder="Buscar producto" class="form-control">
            </div>
        </div><br />
        <div class="row" id="busqueda">
            @foreach (var item in Model)
            {
                <div class="card box" style="width: 18rem;">
                    <img class="card-img-top" src="~/imagenes/@item.RutaImagen" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@item.Nombre - $@item.Precio</h5>
                        <p class="card-text">@item.Descripcion</p>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

@section Scripts{ 
    <script>
        $(document).ready(function () {
            $("#inputBuscar").on("keyup", function () {
                var valor = $(this).val().toLowerCase();
                $("#busqueda *").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(valor) > -1)
                });
            });
        });
    </script>
}