@model List<Microsoft.AspNetCore.Identity.IdentityRole>


@{
    ViewData["Title"] = "Roles";
}

<br />
<div class="container-fluid">
    <div class="row">
        <div class="col-md-1">
            <a href="#" class="btn btn-secondary btn-lg">Configuración</a>
        </div>
    </div>
</div>
<hr>

<div class="content">

    <div class="container-fluid">

        <h3 class="text-center">Aministrar Roles</h3>
        <hr />

        <div class="row">
            <div class="col-6">
                <form asp-action="Crear" method="Post">
                    <h3 class="text-center">Crear rol</h3>
                    <div class="form-group">
                        <label>Ingrese el nombre del rol</label>
                        <input type="text" id="rol" name="rol" class="form-control" placeholder="Nombre del rol" />
                        <br />
                        <input type="submit" value="Crear" class="btn btn-outline-primary btn-block" />
                        <a asp-action="Index" class="btn btn-outline-danger btn-block">Cancel</a>
                    </div>
                </form>
            </div>


            <div class="col-6" style="border-left:1px solid black;">
                <h3 class="text-center">Roles</h3>
                @if (Model.Count == 0)
                {
                    <br />
                    <h3 class="text-center">No se encontraron roles</h3>
                }
                else
                {
                    <table class="table">
                        <thead class="bg-dark text-white">
                            <tr>
                                <th>Rol</th>
                                <th>Acción</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var r in Model)
                            {
                                <tr>
                                    <td>@r.Name</td>
                                    <td>
                                        <a name="rol" id="rol" class="btn btn-outline-danger"
                                           asp-route-rol="@r.Name"
                                           asp-action="Eliminar"
                                           onclick="return confirm('Desea eliminar este rol?')">Eliminar rol</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts{

}
